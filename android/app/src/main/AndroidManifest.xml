<!-- Nota: se agregó  la activity SplashActivity y se modificó .MainActivity quitandole el filtro-->

 <!-- Remove the intent-filter of the MainActivity and add a param android:exported="true" -->
 <!-- ojo: Fue eliminado el <intent-filter> que traía por default -->
        <activity
          android:name=".MainActivity"
          android:label="@string/app_name"
          android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
          android:windowSoftInputMode="adjustResize"
          android:screenOrientation = "portrait" 
          android:exported="true">
        </activity>
        <!-- fin remove inter-filter -->


 <!-- Add this SplashActivity -->
        <activity
          android:name=".SplashActivity"
          android:theme="@style/SplashTheme"
          android:screenOrientation = "portrait"
          android:label="@string/app_name">
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
        </activity>
  <!-- fin line SplashActivity-->




      <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
    </application>

</manifest>
